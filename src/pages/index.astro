---
import BasicMeta from '../components/BasicMeta.astro'
import Logo from '../components/logo/GoodbyteGames.vue'
import GamesList from '../components/GamesList.vue'
import Noise from '../components/Noise.vue'
---
<html lang="en">
	<head>
		<BasicMeta/>
		<title>Goodbyte Games</title>
		<meta name="theme-color" content="#007944">
		<style>
			@font-face
			{
				font-family: "Editorial New";
				src: url('https://fonts.goodbyte.ca/editorial-new.woff2') format('woff2'),
				     url('https://fonts.goodbyte.ca/editorial-new.woff')  format('woff');
				font-display: block;
			}

			:global(:root)
			{
				--light-green: #CFE4D9;
				--mid-light-green: #00CB4B;
				--mid-dark-green: #00AD41;
				--dark-green: #007944;
				--black: #012917;
				--white: #FFFFFF;

				--primary-font: "Editorial New", Times, serif;
				--secondary-font: -apple-system, BlinkMacSystemFont, Arial, Helvetica, Roboto, sans-serif;
			}

			:global(::selection)
			{
				background-color: var(--mid-dark-green);
				color: var(--light-green);
			}

			body
			{
				font-family: var(--secondary-font);
				font-size: 16px;
				background-color: var(--dark-green);
				color: var(--mid-light-green);
				margin: 0;

				text-rendering: geometricPrecision;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				font-feature-settings:"kern" 1;
				font-kerning: normal; 
			}
		</style>
	</head>
	<body>
		<Noise/>
		<header>
			<Logo/>
		</header>
		<main>
			<GamesList/>
		</main>
	</body>
</html>
