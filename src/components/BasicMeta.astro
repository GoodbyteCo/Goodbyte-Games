---
export type MetaProps = {
    description?: string,
    title?: string
}
const {description, title} = Astro.props as MetaProps
---
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preload" href="https://fonts.goodbyte.ca/editorial-new.woff2" as="font" type="font/woff2" crossorigin>
<meta name="author" content="Jack Guinane, Quinn Pollock"/>
<title>{title ?? "Goodbyte Games"}</title>
<meta name="description" content={description ?? "Goodbyte Game: Sometimes we make games, and when we do, they go here."}/>
<link rel="icon" type="image/svg+xml" href="/favicon.svg">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#00ad41">
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@GoodbyteStudio" />
<meta name="twitter:creator" content="@GoodbyteStudio"/>
<meta name="twitter:title" content={title ?? "Goodbyte Games"}/>
<meta name="twitter:description" content={description ?? "Goodbyte Game: Sometimes we make games, and when we do, they go here."}/>
<meta name="twitter:image" content="https://goodbyte.games/assets/socials.png" />
<meta name="twitter:image:alt" content="Goodbyte Games Logo"/>
<meta property="og:title" content={title ?? "Goodbyte Games"} />
<meta property="og:description" content={description ?? "Goodbyte Game: Sometimes we make games, and when we do, they go here."}/>
<meta property="og:image" content="https://goodbyte.games/assets/socials.png"/>
<meta property="og:url" content="https://goodbyte.games" />
<meta property="og:image:secure_url" content="https://goodbyte.games/assets/socials.png"/>
<meta property="og:image:alt" content="Goodbyte Games Logo"/>
<link key="apple-touch-icon" rel="apple-touch-icon" sizes="180x180" href="/assets/apple_touch_logo.png">

